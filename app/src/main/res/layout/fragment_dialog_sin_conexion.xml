<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Dialogs.DialogSinConexionFragment"
    android:background="@color/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Buttoncerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_cerrar"
            android:layout_gravity="right"
            android:gravity="right"
            android:background="@color/background"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_advance"
            android:layout_marginTop="@dimen/bienvenida"
            android:layout_marginRight="@dimen/margin_advance"
            android:src="@drawable/ic_sininternet" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="SIN CONEXIÓN"
            android:textSize="40dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="Revisa tu conexión a internet o intenta nuevamente"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/margin"/>

    </LinearLayout>
</FrameLayout>