<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorSetting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".FragmentSetting">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagePerfil"
                android:layout_width="@dimen/image_profile"
                android:layout_height="@dimen/image_profile"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginLeft="20dp"
                android:src="@drawable/imagenperfil" />

            <TextView
                android:id="@+id/nameSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margintop_profile"
                android:text="Fernando "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_profile" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linear1"
            android:orientation="vertical">


            <Button
                android:id="@+id/myList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:typeface="normal"
                android:textAlignment="textStart"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_check"
                android:text="@string/my_list" />

            <Button
                android:id="@+id/my_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text"
                android:typeface="normal"
                android:textAlignment="textStart"
                android:drawableRight="@drawable/ic_next"
                android:drawableLeft="@drawable/ic_user"
                android:text="@string/editarPerfil" />

        </LinearLayout>
    </RelativeLayout>




</FrameLayout>